<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="Notify" />

    <style name="Notify.ContentText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAppearance">@style/NotificationTitle</item>
    </style>

    <style name="Notify.SecondlyLine">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">13dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textAppearance">@style/NotificationContent</item>
    </style>

    <style name="Notify.Icon">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@null</item>
    </style>
</resources>
