<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingLeft="25dp">

    <RelativeLayout
        android:id="@+id/type_name_ly"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/type_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="洗涤设备"
            android:textStyle="bold"
            android:background="@drawable/record_bg"
            android:padding="5dp"
            android:textColor="#00a551"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:scaleType="centerInside"
            android:background="@drawable/plus_bg"
            android:textSize="12sp"
            android:text="添加"/>

    </RelativeLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/type_name_ly"
        android:background="#f5f5f5" />

    <LinearLayout
        android:id="@+id/record_item_container"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider">


    </LinearLayout>


</RelativeLayout>