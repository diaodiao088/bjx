<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/status_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingBottom="12dp"
            android:paddingLeft="17dp"
            android:paddingTop="12dp"
            android:text="恭喜你，开启了新的赚钱旅程"
            android:textColor="#545454"
            android:textSize="14sp"
            android:textStyle="bold" />

        <com.bjxapp.worker.ui.widget.ToggleSwitchButton
            android:id="@+id/toggle_switch_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp" />

    </LinearLayout>

    <include layout="@layout/pager_sliding_strip" />

    <com.bjxapp.worker.ui.widget.BlockableViewPager
        android:id="@+id/main_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/call_record_tab" />

</LinearLayout>