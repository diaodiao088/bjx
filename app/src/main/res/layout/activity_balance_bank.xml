<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	android:gravity="center_horizontal"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto">
	
    <include layout="@layout/layout_title"/>
    
	<ScrollView
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:scrollbars="none">
		<LinearLayout
			android:orientation="vertical"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content">
 			<View
				android:background="@color/separator_color"
				android:layout_width="fill_parent"
				android:layout_height="1.0dip" />
			<RelativeLayout
            	android:layout_width="match_parent"
            	android:background="@drawable/setting_item_selector"
            	android:layout_marginTop="10dp"
            	android:layout_height="50dp" >

	            <com.bjxapp.worker.controls.XEditText
	                android:id="@+id/balance_bank_card_edit"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_centerVertical="true"
	                android:background="@drawable/setting_item_selector"
	                android:hint="输入您的银行卡号"
	                android:inputType="phone"
	                android:maxLength="21"
	                android:paddingLeft="100dp"
	                android:singleLine="true"
	                android:textColorHint="#DDDDDD"
	                android:textSize="14sp" />

	            <com.bjxapp.worker.controls.XTextView
	                android:layout_width="90dp"
	                android:layout_height="wrap_content"
	                android:layout_alignLeft="@id/balance_bank_card_edit"
	                android:layout_centerVertical="true"
	                android:layout_marginLeft="10dp"
	                android:background="@drawable/setting_item_selector"
	                android:text="银行卡号："
	                android:textColor="#353535"
	                android:textSize="14sp" />

        	</RelativeLayout>			
			<View
				android:background="@color/separator_color"
				android:layout_width="fill_parent"
				android:layout_height="1.0dip" />
			<RelativeLayout
            	android:layout_width="match_parent"
            	android:background="@drawable/setting_item_selector"
            	android:layout_marginTop="0dp"
            	android:layout_height="50dp" >

	            <com.bjxapp.worker.controls.XEditText
	                android:id="@+id/balance_bank_name_edit"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_centerVertical="true"
	                android:background="@drawable/setting_item_selector"
	                android:hint="输入您的开户银行名称"
	                android:inputType="text"
	                android:maxLength="20"
	                android:paddingLeft="100dp"
	                android:singleLine="true"
	                android:textColorHint="#DDDDDD"
	                android:textSize="14sp" />

	            <com.bjxapp.worker.controls.XTextView
	                android:layout_width="90dp"
	                android:layout_height="wrap_content"
	                android:layout_alignLeft="@id/balance_bank_name_edit"
	                android:layout_centerVertical="true"
	                android:layout_marginLeft="10dp"
	                android:background="@drawable/setting_item_selector"
	                android:text="开户银行："
	                android:textColor="#353535"
	                android:textSize="14sp" />

        	</RelativeLayout>	
        	<View
				android:background="@color/separator_color"
				android:layout_width="fill_parent"
				android:layout_height="1.0dip" />
			<RelativeLayout
            	android:layout_width="match_parent"
            	android:background="@drawable/setting_item_selector"
            	android:layout_marginTop="0dp"
            	android:layout_height="50dp" >

	            <com.bjxapp.worker.controls.XEditText
	                android:id="@+id/balance_bank_person_edit"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_centerVertical="true"
	                android:background="@drawable/setting_item_selector"
	                android:hint="输入您的开户人姓名"
	                android:inputType="text"
	                android:maxLength="15"
	                android:paddingLeft="100dp"
	                android:singleLine="true"
	                android:textColorHint="#DDDDDD"
	                android:textSize="14sp" />

	            <com.bjxapp.worker.controls.XTextView
	                android:layout_width="90dp"
	                android:layout_height="wrap_content"
	                android:layout_alignLeft="@id/balance_bank_person_edit"
	                android:layout_centerVertical="true"
	                android:layout_marginLeft="10dp"
	                android:background="@drawable/setting_item_selector"
	                android:text="开户人："
	                android:textColor="#353535"
	                android:textSize="14sp" />

        	</RelativeLayout>	
        	<View
				android:background="@color/separator_color"
				android:layout_width="fill_parent"
				android:layout_height="1.0dip" />
			<RelativeLayout
            	android:layout_width="match_parent"
            	android:background="@drawable/setting_item_selector"
            	android:layout_marginTop="0dp"
            	android:layout_height="50dp" >

	            <com.bjxapp.worker.controls.XEditText
	                android:id="@+id/balance_bank_mobile_edit"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_centerVertical="true"
	                android:background="@drawable/setting_item_selector"
	                android:hint="输入您的开户预留手机号"
	                android:inputType="phone"
	                android:maxLength="11"
	                android:paddingLeft="100dp"
	                android:singleLine="true"
	                android:textColorHint="#DDDDDD"
	                android:textSize="14sp" />

	            <com.bjxapp.worker.controls.XTextView
	                android:layout_width="90dp"
	                android:layout_height="wrap_content"
	                android:layout_alignLeft="@id/balance_bank_mobile_edit"
	                android:layout_centerVertical="true"
	                android:layout_marginLeft="10dp"
	                android:background="@drawable/setting_item_selector"
	                android:text="开户手机号："
	                android:textColor="#353535"
	                android:textSize="14sp" />

        	</RelativeLayout>			
			<View
				android:background="@color/separator_color"
				android:layout_width="fill_parent"
				android:layout_height="1.0dip" />					

			<com.bjxapp.worker.controls.XTextView
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:layout_marginBottom="20dp"
			    android:layout_marginLeft="20dp"
			    android:layout_marginRight="20dp"
			    android:layout_marginTop="20dp"
			    android:text="提示：\n请确保您输入的银行卡信息准确无误，否则您的收入将无法汇入您的账户。"
			    android:textColor="@color/red"
			    android:textSize="14sp" />

			<com.bjxapp.worker.controls.XButton
			    android:id="@+id/balance_bank_button_save"
			    android:layout_width="fill_parent"
			    android:layout_height="40.0dip"
			    android:layout_marginBottom="20dp"
			    android:layout_marginLeft="20dp"
			    android:layout_marginRight="20dp"
			    android:layout_marginTop="20dp"
			    android:background="@drawable/button_background_green"
			    android:text="提交银行卡信息"
			    android:textColor="@color/white"
			    android:textSize="14sp" />
		</LinearLayout>
	</ScrollView>
</LinearLayout>