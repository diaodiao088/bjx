<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical">

    <LinearLayout
        style="@style/XDialogStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.bjxapp.worker.controls.XTextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="0dp"
            android:gravity="center"
            android:text="提醒"
            android:textColor="@color/main_text_color"
            android:textSize="18sp" />

        <com.bjxapp.worker.controls.XTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="0dp"
            android:lineSpacingExtra="3dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="提现后的金额我们将在可提现日期之后的1个工作日内汇入您的银行账户，请及时查收。"
            android:textColor="@color/main_text_color"
            android:textSize="15sp" />

        <com.bjxapp.worker.controls.XTextView
            android:id="@+id/balance_withdraw_input_infomation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="10dp"
            android:lineSpacingExtra="3dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="每月1至5日提现，将在5日后的第一个工作日汇钱。15日至18日提现，则在18日后的第一个工作日汇钱。"
            android:textColor="@color/main_text_color"
            android:textSize="15sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="20dp">

            <com.bjxapp.worker.controls.XEditText
                android:id="@+id/balance_withdraw_input_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@null"
                android:hint="输入提现金额"
                android:inputType="phone"
                android:maxLength="8"
                android:paddingLeft="110dp"
                android:singleLine="true"
                android:textColor="@color/greeny"
                android:textColorHint="#DDDDDD"
                android:textSize="15sp" />

            <com.bjxapp.worker.controls.XTextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/balance_withdraw_input_edit"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="提现金额："
                android:textColor="@color/main_text_color"
                android:textSize="15sp" />

            <com.bjxapp.worker.controls.XTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:text="元"
                android:textColor="@color/main_text_color"
                android:textSize="15sp" />
        </RelativeLayout>

        <com.bjxapp.worker.controls.XButton
            android:id="@+id/balance_withdraw_input_save"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_background_green"
            android:paddingBottom="7dp"
            android:paddingTop="7dp"
            android:text="提现"
            android:textColor="@android:color/white"
            android:textSize="20dp" />
    </LinearLayout>
</LinearLayout>