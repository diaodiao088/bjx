<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="20dp"
    android:paddingBottom="20dp">

    <TextView
        android:id="@+id/enterprise_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:drawableLeft="@drawable/order_time"
        android:drawablePadding="8dp"
        android:gravity="center"
        android:text="这是地址"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/address_des_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="15dp"
        android:text="地址:"
        android:textColor="#ababab"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="@+id/enterprise_name"
        app:layout_constraintTop_toBottomOf="@+id/enterprise_name" />

    <TextView
        android:id="@+id/address_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="15dp"
        android:text="这是地址"
        android:textColor="#ababab"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@+id/address_des_tv"
        app:layout_constraintTop_toBottomOf="@+id/enterprise_name" />


</android.support.constraint.ConstraintLayout>