<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <LinearLayout
        android:id="@+id/modify_strategy_ly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/layout_radius"
        android:orientation="vertical"
        android:visibility="visible">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/issue_edit_btn">

                <com.bjxapp.worker.controls.XTextView
                    android:id="@+id/modify_divider"
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:background="@drawable/layout_textview_radius"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:text=""
                    android:textColor="#ffffff"
                    android:textSize="14sp" />

                <com.bjxapp.worker.controls.XTextView
                    android:id="@+id/order_receive_detail_addition_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/modify_divider"
                    android:gravity="center_vertical"
                    android:paddingLeft="3dp"
                    android:text="维修项"
                    android:textColor="#545454"
                    android:textSize="14sp" />

            </RelativeLayout>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:background="#f0f0f0" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp">

            <com.bjxapp.worker.controls.XTextView
                android:id="@+id/order_receive_detail_addition_content_text"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical"
                android:text="协调原因："
                android:textColor="#545454"
                android:textSize="14sp" />

            <com.bjxapp.worker.controls.XTextView
                android:id="@+id/issue_reason_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/order_receive_detail_addition_content_text"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:textColor="#545454"
                android:textSize="14sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp">

            <com.bjxapp.worker.controls.XTextView
                android:id="@+id/strategy_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical"
                android:text="下次处理时间："
                android:textColor="#545454"
                android:textSize="14sp" />

            <com.bjxapp.worker.controls.XTextView
                android:id="@+id/strategy_content_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/strategy_tv"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:textColor="#545454"
                android:textSize="14sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp">

            <com.bjxapp.worker.controls.XTextView
                android:id="@+id/guzhang_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical"
                android:text="故障原因："
                android:textColor="#545454"
                android:textSize="14sp" />

            <com.bjxapp.worker.controls.XTextView
                android:id="@+id/guzhang_content_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/guzhang_tv"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:textColor="#545454"
                android:textSize="14sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp">

            <com.bjxapp.worker.controls.XTextView
                android:id="@+id/modify_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical"
                android:text="维修方案："
                android:textColor="#545454"
                android:textSize="14sp" />

            <com.bjxapp.worker.controls.XTextView
                android:id="@+id/modify_content_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/modify_tv"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:textColor="#545454"
                android:textSize="14sp" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/detail_price_ly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="报价明细:"
                android:textColor="@color/main_text_color"
                android:textSize="14sp" />

            <LinearLayout
                android:id="@+id/main_container_ly"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:background="#f0f0f0" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp">

            <com.bjxapp.worker.controls.XTextView
                android:id="@+id/price_tv"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical"
                android:text="总报价："
                android:textColor="#545454"
                android:textSize="14sp" />

            <com.bjxapp.worker.controls.XTextView
                android:id="@+id/price_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:drawablePadding="8dp"
                android:gravity="center_vertical|right"

                android:textColor="#545454"
                android:textSize="14sp"
                android:textStyle="bold" />
        </RelativeLayout>


        <LinearLayout
            android:id="@+id/other_price_ly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginTop="5dp"
            android:orientation="vertical" />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:background="#f0f0f0" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp">

            <com.bjxapp.worker.controls.XTextView
                android:id="@+id/photo_look_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:drawableRight="@drawable/type_arrow"
                android:gravity="center_vertical"
                android:text="查看维修照片："
                android:textColor="#545454"
                android:textSize="14sp" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:background="#f0f0f0" />

        <LinearLayout
            android:id="@+id/contact_record_ly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:padding="10dp" />

        <LinearLayout
            android:id="@+id/bottom_comit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp">

            <EditText
                android:id="@+id/edit_text"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@drawable/login_main_bg"
                android:gravity="center_horizontal|left"
                android:padding="5dp"
                android:textColor="@color/main_text_color"
                android:hint="情况说明"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/commit_tv"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/login_main_bg"
                android:gravity="center"
                android:text="提交"
                android:textColor="@color/main_text_color" />


        </LinearLayout>


    </LinearLayout>

    <ImageView
        android:id="@+id/status_iv"
        android:layout_width="80dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:scaleType="fitXY"
        android:layout_height="80dp" />


</RelativeLayout>