<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/title_bar_root"
    android:layout_width="match_parent"
    android:layout_height="48.0dip"
    android:background="#FFFFFF">

    <com.bjxapp.worker.controls.XTextView
        android:id="@+id/title_text_left"
        style="@style/title_textStyle"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:text="@string/app_name"
        android:textSize="15sp"
        android:visibility="gone" />

    <com.bjxapp.worker.controls.XImageView
        android:id="@+id/title_image_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/back"
        android:visibility="visible" />

    <com.bjxapp.worker.controls.XTextView
        android:id="@+id/title_text_title"
        style="@style/title_textStyle"
        android:layout_centerInParent="true"
        android:textStyle="bold"
        android:text="@string/app_name" />

    <com.bjxapp.worker.controls.XImageView
        android:id="@+id/title_image_right"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/icon_menu_add"
        android:visibility="gone" />

    <com.bjxapp.worker.controls.XTextView
        android:id="@+id/title_text_right"
        style="@style/title_textStyle"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/title_right_small_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:text="添加照片"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:visibility="gone" />

    <View
        android:id="@+id/title_divider"
        android:layout_width="fill_parent"
        android:layout_height="2px"
        android:layout_alignParentBottom="true"
        android:background="@color/separator_color" />

</RelativeLayout>