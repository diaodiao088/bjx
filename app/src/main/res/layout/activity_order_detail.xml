                        <com.bjxapp.worker.controls.XTextView
                            android:id="@+id/modify_divider"
                            android:layout_width="1dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:background="@drawable/layout_textview_radius"
                            android:paddingLeft="2dp"
                            android:paddingRight="2dp"
                            android:text=""
                            android:textColor="#ffffff"
                            android:textSize="14sp" />

                        <com.bjxapp.worker.controls.XTextView
                            android:id="@+id/order_receive_detail_addition_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/modify_divider"
                            android:gravity="center_vertical"
                            android:paddingLeft="3dp"
                            android:text="维修项"
                            android:textColor="#545454"
                            android:textSize="14sp" />

