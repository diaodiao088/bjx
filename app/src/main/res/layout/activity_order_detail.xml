                        android:gravity="center_vertical|right"
                        android:text="100.00"
                        android:textColor="#545454"
                        android:textSize="14sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp">

                    <com.bjxapp.worker.controls.XTextView
                        android:id="@+id/fukuan_tv"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:gravity="center_vertical"
                        android:text="付款金额："
                        android:textColor="#545454"
                        android:textSize="14sp" />

                    <com.bjxapp.worker.controls.XTextView
                        android:id="@+id/fukuan_content_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/fukuan_tv"
                        android:drawablePadding="8dp"
                        android:gravity="center_vertical|right"
                        android:text="100.00"
                        android:textColor="#545454"
                        android:textSize="14sp" />
                </RelativeLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp">

                <RelativeLayout
                    android:id="@+id/save_ly"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:visibility="gone">

                    <com.bjxapp.worker.controls.XButton
                        android:id="@+id/order_receive_detail_save"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/button_background_green"
                        android:text="保存"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/cancel_bill"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/order_receive_detail_save"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20dp"
                        android:text="退单"
                        android:textColor="#A9A9A9"
                        android:textSize="16sp" />

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/order_receiver_ly"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="50dp"
                        android:layout_marginRight="50dp">

                        <TextView
                            android:id="@+id/wait_contact_change_btn"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_marginRight="30dp"
                            android:layout_weight="1"
                            android:background="@null"
                            android:gravity="center"
                            android:text="改约"
                            android:textColor="#999999"
                            android:textSize="14sp" />

                        <com.bjxapp.worker.controls.XButton
                            android:id="@+id/wait_contact_ok_btn"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:background="@drawable/button_background_green"
                            android:text="确定"
                            android:textColor="@android:color/white" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:text="提示"
                        android:textColor="#999999"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/send_message_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="8dp"
                        android:textColor="#999999" />

                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
