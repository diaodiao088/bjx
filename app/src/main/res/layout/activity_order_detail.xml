                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:gravity="center_vertical"
                        android:text="故障原因："
                        android:textColor="#545454"
                        android:textSize="14sp" />

                    <com.bjxapp.worker.controls.XTextView
                        android:id="@+id/issue_reason_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/order_receive_detail_addition_content_text"
                        android:drawablePadding="8dp"
                        android:gravity="center_vertical"
                        android:text="马桶维修、冰箱维修、换灯泡"
                        android:textColor="#545454"
                        android:textSize="14sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp">

                    <com.bjxapp.worker.controls.XTextView
                        android:id="@+id/strategy_tv"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:gravity="center_vertical"
                        android:text="维修方案："
                        android:textColor="#545454"
                        android:textSize="14sp" />

                    <com.bjxapp.worker.controls.XTextView
                        android:id="@+id/strategy_content_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/strategy_tv"
                        android:drawablePadding="8dp"
                        android:gravity="center_vertical"
                        android:text="电灯泡维修"
                        android:textColor="#545454"
                        android:textSize="14sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp">

                    <com.bjxapp.worker.controls.XTextView
                        android:id="@+id/price_tv"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:gravity="center_vertical"
                        android:text="总报价："
                        android:textColor="#545454"
                        android:textSize="14sp" />

                    <com.bjxapp.worker.controls.XTextView
                        android:id="@+id/price_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/price_tv"
                        android:drawablePadding="8dp"
                        android:gravity="center_vertical|right"
                        android:text="100.00"
                        android:textColor="#545454"
                        android:textSize="14sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/issue_add_image_ly"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="15dp">

                    <com.bjxapp.worker.controls.XTextView
                        android:id="@+id/add_image"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:gravity="center_vertical"
                        android:text="添加照片："
                        android:textColor="#545454"
                        android:textSize="14sp" />

                    <com.bjxapp.worker.controls.XTextView
                        android:id="@+id/add_image_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/add_image"
                        android:drawablePadding="8dp"
                        android:drawableRight="@drawable/right"
                        android:gravity="center_vertical"
                        android:text="请添加维修前，维修中，维修后的照片"
                        android:textColor="#999999"
                        android:textSize="14sp" />
                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/order_bill_ly"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/layout_radius"
                android:orientation="vertical"
                android:visibility="gone">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="15dp"
                    android:gravity="center_vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true">

                        <com.bjxapp.worker.controls.XTextView
                            android:id="@+id/order_divider"
                            android:layout_width="1dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:background="@drawable/layout_textview_radius"
                            android:paddingLeft="2dp"
                            android:paddingRight="2dp"
                            android:text=""
                            android:textColor="#ffffff"
                            android:textSize="14sp" />

                        <com.bjxapp.worker.controls.XTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/order_divider"
                            android:gravity="center_vertical"
                            android:paddingLeft="3dp"
                            android:text="预付项"
                            android:textColor="#545454"
                            android:textSize="14sp" />

                    </RelativeLayout>

                    <com.bjxapp.worker.controls.XButton
                        android:id="@+id/order_bill_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/layout_textview_radius"
                        android:paddingBottom="2dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="2dp"
                        android:text="编辑"
                        android:textColor="#ffffff"
                        android:textSize="14sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp">

                    <com.bjxapp.worker.controls.XTextView
                        android:id="@+id/order_bill_tv"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:gravity="center_vertical"
                        android:text="预付内容："
                        android:textColor="#545454"
                        android:textSize="14sp" />

                    <com.bjxapp.worker.controls.XTextView
                        android:id="@+id/pre_bill_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/order_bill_tv"
                        android:drawablePadding="8dp"
                        android:gravity="center_vertical"
                        android:text="马桶维修、冰箱维修、换灯泡"
                        android:textColor="#545454"
                        android:textSize="14sp" />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp">

                    <com.bjxapp.worker.controls.XTextView
                        android:id="@+id/order_bill_cash_tv"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:gravity="center_vertical"
                        android:text="预付金额："
                        android:textColor="#545454"
                        android:textSize="14sp" />

                    <com.bjxapp.worker.controls.XTextView
                        android:id="@+id/order_bill_cash_content_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/order_bill_cash_tv"
                        android:drawablePadding="8dp"
                        android:gravity="center_vertical|right"
                        android:text="100.00"
                        android:textColor="#545454"
                        android:textSize="14sp" />
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/final_money_ly"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/layout_radius"
                android:orientation="vertical"
                android:visibility="gone">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="15dp"
                    android:gravity="center_vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true">

                        <com.bjxapp.worker.controls.XTextView
                            android:id="@+id/money_divider"
                            android:layout_width="1dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:background="@drawable/layout_textview_radius"
                            android:paddingLeft="2dp"
                            android:paddingRight="2dp"
                            android:text=""
                            android:textColor="#ffffff"
                            android:textSize="14sp" />

                        <com.bjxapp.worker.controls.XTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/money_divider"
                            android:gravity="center_vertical"
                            android:paddingLeft="3dp"
                            android:text="本单收入总计"
                            android:textColor="#545454"
                            android:textSize="14sp" />

                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp">

                    <com.bjxapp.worker.controls.XTextView
                        android:id="@+id/enter_room_tv"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:gravity="center_vertical"
                        android:text="上门费用："
                        android:textColor="#545454"
                        android:textSize="14sp" />

                    <com.bjxapp.worker.controls.XTextView
                        android:id="@+id/enter_room_content_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/enter_room_tv"
                        android:drawablePadding="8dp"
                        android:gravity="center_vertical|right"
                        android:text="100.00"
                        android:textColor="#545454"
                        android:textSize="14sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp">

                    <com.bjxapp.worker.controls.XTextView
                        android:id="@+id/entire_price_tv"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:gravity="center_vertical"
                        android:text="总报价："
                        android:textColor="#545454"
                        android:textSize="14sp" />

                    <com.bjxapp.worker.controls.XTextView
                        android:id="@+id/entire_price_content_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/entire_price_tv"
                        android:drawablePadding="8dp"
                        android:gravity="center_vertical|right"
                        android:text="100.00"
                        android:textColor="#545454"
                        android:textSize="14sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp">

                    <com.bjxapp.worker.controls.XTextView
                        android:id="@+id/total_tv"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:gravity="center_vertical"
                        android:text="总计："
                        android:textColor="#545454"
                        android:textSize="14sp" />

                    <com.bjxapp.worker.controls.XTextView
                        android:id="@+id/total_content_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/total_tv"
                        android:drawablePadding="8dp"
                        android:gravity="center_vertical|right"
                        android:text="100.00"
                        android:textColor="#545454"
                        android:textSize="14sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp">

                    <com.bjxapp.worker.controls.XTextView
                        android:id="@+id/price_ready_tv"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:gravity="center_vertical"
                        android:text="预付金额："
                        android:textColor="#545454"
                        android:textSize="14sp" />

                    <com.bjxapp.worker.controls.XTextView
                        android:id="@+id/price_ready_content_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/price_ready_tv"
