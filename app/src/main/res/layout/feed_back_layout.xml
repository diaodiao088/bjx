<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/windows_color"
    android:orientation="vertical">

    <include layout="@layout/layout_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/feedback_bg"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingBottom="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:text="反馈信息"
            android:textColor="#545454"
            android:textStyle="bold"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            android:background="#eeeeee"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/change_reason_tv"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_below="@+id/layout_title"
                android:layout_gravity="left"
                android:layout_marginTop="10dp"
                android:background="@null"
                android:gravity="left"
                android:hint="请输入您的反馈信息..."
                android:lineSpacingExtra="3dp"
                android:maxLength="200"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="15dp"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/content_limit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/change_reason_tv"
                android:layout_alignBottom="@+id/change_reason_tv"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"
                android:text="0/200"
                android:textColor="#B5B5B5" />

        </RelativeLayout>
    </LinearLayout>

    <com.bjxapp.worker.controls.XButton
        android:id="@+id/add_confirm_btn"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/button_background_green"
        android:text="确认"
        android:textColor="@android:color/white"
        android:textSize="18sp" />


</LinearLayout>